<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs')%>
<body>
    <%- include('../partials/nav.ejs')%>

    <div class="create-blog">
        <h2>Update User</h2>
        <form action="/users" method="POST">
            <input type="hidden" name="id_update" value="<%= user.id %>">
            <label for="title">Username:</label>
            <input type="text" id="title" name="username" value="<%= user.username %>" required>
            <label for="snippet">Password:</label>
            <input type="text" id="snippet" name="password" value="<%= user.password %>" required>
            <label for="body">Email:</label>
            <input type="email" id="snippet" name="email" value="<%= user.email %>" required>
            <button>Submit</button>
        </form>
    </div>
    <%- include('../partials/footer.ejs')%>
</body>
</html>